<div class="boxed">
<fieldset>
  <legend><%= location.name %></legend>
</fieldset>

  <% if location.has_upcoming_appointments? %>
    <button type="button" id="showModal" class="btn btn-primary" data-toggle="modal" data-id="<%=location.id%>" data-target="#appointmentModal">View Appointments For This Location</button> <br /><br />
  <% end %>

  <% if has_empty_fields?(location) %>
    <p>This location has incomplete data! Update it by selecting 'Edit'.</p>
  <% else %>
    <p><%= location.street_address %></p>
    <p><%= location.city %>, <%= location.state %>, <%= location.zip_code %></p>
  <% end %>
  <p><%= link_to "Edit", edit_location_path(location) %> | <%= link_to "Delete", location_path(location), method: :delete, data: { confirm: "Are you sure you want to delete this location?" } %></p>

  <div class="modal fade" id="appointmentModal" tabindex="-1" role="dialog" data-id="<%=location.id%>" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel"><strong>Appointments for <%= location.name %></strong></h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <ul class="modal-body">
          </ul>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


</div>
