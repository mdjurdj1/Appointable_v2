<% if location.errors.any? %>
  <div id="error_explanation">
    <h4>There were some errors:</h4>
    <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<%end%>

  <%= form_for location do |f| %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td> <%= f.text_field :name, :placeholder=>"Name" %> </td>
    </tr>
    <tr>
      <td><%= f.label :street_address %></td>
      <td><%= f.text_field :street_address, :placeholder=>"Street Address" %></td>
    </tr>
    <tr>
      <td><%= f.label :city %></td>
      <td><%= f.text_field :city, :placeholder=>"City" %></td>
    </tr>
    <tr>
      <td><%= f.label :state %></td>
      <td><%= f.text_field :state, :placeholder=>"State" %></td>
    </tr>
    <tr>
      <td><%= f.label :zip_code %></td>
      <td><%= f.text_field :zip_code, :placeholder=>"Zip Code" %></td>
    </tr>
    <tr>
      <td></td>
      <td class="left"><%= f.submit %></td>
    </tr>
  </table>
<% end %>
